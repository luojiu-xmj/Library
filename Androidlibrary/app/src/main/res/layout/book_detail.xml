<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".look_bookDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textabove"
            android:text="书籍详情"
            android:textSize="20dp"
            style="@style/top_item"
            />

    </LinearLayout>
    <ScrollView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_name_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_author_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出版社:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_press_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书价:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_price_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书号:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_ISBN_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出版日期:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_date_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_score_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页数:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_page_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_content_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="链接:"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/margin_size"/>
            <TextView
                android:id="@+id/look_link_edt"
                android:layout_marginLeft="@dimen/margin_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
